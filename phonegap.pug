mixin tv-item(channelInfo)
    .tv-layout__item
        .tv-channel
            .tv-channel__header.clearfix
                .tv-channel-icon
                    img.tv-channel-icon__img(src='images/' + channelInfo.imgName, alt=channelInfo.imgAlt)
                .tv-channel-title
                    span.tv-channel-title__name #{channelInfo.title}
            .tv-channel__shows
                each show in channelInfo.shows
                    .tv-channel-show
                        .tv-channel-show__wrapper
                            a.link.tv-link(href='description.html')
                                .tv-channel-show__time
                                    span.time #{show.time}
                                .tv-channel-show__title
                                    span.show-title #{show.title}
doctype
html(lang='ru')
    head
        meta(charset='utf-8')
        meta(name='format-detection', content='telephone=no')
        meta(name='msapplication-tap-highlight', content='no')
        meta(http-equiv='Content-Security-Policy', content="default-src * 'unsafe-inline'; style-src 'self' 'unsafe-inline'; media-src *")
        meta(name='viewport', content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width')
        link(rel='stylesheet', href='https://yastatic.net/bem-components/latest/touch-phone/bem-components.css')
        link(rel='stylesheet', href='styles.css')
    body.page
        .header
            header.header__wrapper
                .logo.header__logo
                    span.logo__text
                        | Тво
                        span.logo__letter Я
                        |  Телепрограмма
        main.main
            .main__header
                .main__wrapper
                    .days.days_horizontal
                        ul.days__list
                            li.days__item.days_hasChild.days_hover_allowed
                                a.days__link.days__item_small.days__link_active.days__arrow(href='#') 27, Среда
                                ul.days__children
                                    li.days__item.days__item_small
                                        a.days__link(href='#1') 25, Понедельник
                                    li.days__item
                                        a.days__link(href='#2') 26, Вторник
                                    li.days__item
                                        a.days__link.days__link_active(href='#3') 27, Среда
                                    li.days__item
                                        a.days__link(href='#4') 28, Четверг
                                    li.days__item
                                        a.days__link(href='#5') 29, Пятница
                                    li.days__item
                                        a.days__link(href='#6') 30, Суббота
                                    li.days__item
                                        a.days__link(href='#7') 1, Воскресенье
            .main__wrapper
                .tv-layout.clearfix
                    each channel in channels
                        +tv-item(channel)
        .footer
            footer.footer__wrapper
                .logo.footer__logo
                    span.logo__text
                        | Тво
                        span.logo__letter Я
                        |  Телепрограмма
        script(type='text/javascript', src='cordova.js')
